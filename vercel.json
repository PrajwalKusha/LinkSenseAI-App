{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://linksenseai-app.onrender.com/api/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/:shortCode([A-Za-z0-9_-]{6})",
      "has": [
        {
          "type": "query",
          "key": "redirect",
          "value": "true"
        }
      ],
      "destination": "https://linksenseai-app.onrender.com/:shortCode?redirect=true",
      "permanent": true
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/:shortCode([A-Za-z0-9_-]{6})",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
